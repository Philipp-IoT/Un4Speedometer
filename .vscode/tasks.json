{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docs: build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_docs.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "docs: serve",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/serve_docs.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
